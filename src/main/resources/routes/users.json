{
  "plugin": "users",
  "routes": [
    {
      "method": "GET",
      "path": "/api/users",
      "handler": "listUsers",
      "description": "Lista todos os usuários"
    },
    {
      "method": "GET",
      "path": "/api/users/{id}",
      "handler": "getUserById",
      "description": "Busca usuário por ID"
    },
    {
      "method": "POST",
      "path": "/api/users",
      "handler": "createUser",
      "description": "Cria novo usuário"
    },
    {
      "method": "PUT",
      "path": "/api/users/{id}",
      "handler": "updateUser",
      "description": "Atualiza usuário"
    },
    {
      "method": "DELETE",
      "path": "/api/users/{id}",
      "handler": "deleteUser",
      "description": "Deleta usuário"
    }
  ]
} 