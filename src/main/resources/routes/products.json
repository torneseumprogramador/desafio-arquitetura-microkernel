{
  "plugin": "products",
  "routes": [
    {
      "method": "GET",
      "path": "/api/products",
      "handler": "listProducts",
      "description": "Lista todos os produtos"
    },
    {
      "method": "GET",
      "path": "/api/products/available",
      "handler": "listAvailableProducts",
      "description": "Lista produtos dispon√≠veis"
    },
    {
      "method": "GET",
      "path": "/api/products/{id}",
      "handler": "getProductById",
      "description": "Busca produto por ID"
    },
    {
      "method": "POST",
      "path": "/api/products",
      "handler": "createProduct",
      "description": "Cria novo produto"
    },
    {
      "method": "PUT",
      "path": "/api/products/{id}",
      "handler": "updateProduct",
      "description": "Atualiza produto"
    },
    {
      "method": "PUT",
      "path": "/api/products/{id}/stock",
      "handler": "updateStock",
      "description": "Atualiza estoque do produto"
    },
    {
      "method": "DELETE",
      "path": "/api/products/{id}",
      "handler": "deleteProduct",
      "description": "Deleta produto"
    }
  ]
} 